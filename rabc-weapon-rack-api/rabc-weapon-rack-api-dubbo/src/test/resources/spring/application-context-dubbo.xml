<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <dubbo:application name="rabcwr-api">
        <dubbo:parameter key="qos.enable" value="true"/>
        <dubbo:parameter key="qos.accept.foreign.ip" value="false"/>
        <dubbo:parameter key="qos.port" value="${dubbo.qos.port}"/>
    </dubbo:application>

    <!-- zookeeper注册中心 -->
    <dubbo:registry address="${dubbo.zookeeper.address}"/>

    <!-- 向注册中心注册暴露服务地址,注册服务 -->
    <dubbo:reference id="userMaintainService"
                     interface="com.dwarfeng.rabcwr.stack.service.UserMaintainService"/>
    <dubbo:reference id="roleMaintainService"
                     interface="com.dwarfeng.rabcwr.stack.service.RoleMaintainService"/>
    <dubbo:reference id="pexpMaintainService"
                     interface="com.dwarfeng.rabcwr.stack.service.PexpMaintainService"/>
    <dubbo:reference id="permissionMaintainService"
                     interface="com.dwarfeng.rabcwr.stack.service.PermissionMaintainService"/>
    <dubbo:reference id="registerService"
                     interface="com.dwarfeng.rabcwr.stack.service.RegisterService"/>
</beans>
