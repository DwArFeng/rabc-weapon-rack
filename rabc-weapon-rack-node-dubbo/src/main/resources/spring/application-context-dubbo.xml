<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <dubbo:application name="fdr-record-api">
        <dubbo:parameter key="qos.enable" value="true"/>
        <dubbo:parameter key="qos.accept.foreign.ip" value="false"/>
        <dubbo:parameter key="qos.port" value="${dubbo.qos.port}"/>
    </dubbo:application>

    <!-- zookeeper注册中心 -->
    <dubbo:registry address="${dubbo.zookeeper.address}"/>

    <!-- 向注册中心注册暴露服务地址,注册服务 -->
    <dubbo:reference id="recordService"
                     interface="com.dwarfeng.fdr.stack.service.RecordService"/>
    <!-- 引用维护服务 -->
    <dubbo:reference id="categoryMaintainService"
                     interface="com.dwarfeng.fdr.stack.service.CategoryMaintainService"/>
    <dubbo:reference id="pointMaintainService"
                     interface="com.dwarfeng.fdr.stack.service.PointMaintainService"/>
    <dubbo:reference id="filterInfoMaintainService"
                     interface="com.dwarfeng.fdr.stack.service.FilterInfoMaintainService"/>
    <dubbo:reference id="triggerInfoMaintainService"
                     interface="com.dwarfeng.fdr.stack.service.TriggerInfoMaintainService"/>
    <dubbo:reference id="filteredValueMaintainService"
                     interface="com.dwarfeng.fdr.stack.service.FilteredValueMaintainService"/>
    <dubbo:reference id="persistenceValueMaintainService"
                     interface="com.dwarfeng.fdr.stack.service.PersistenceValueMaintainService"/>
    <dubbo:reference id="realtimeValueMaintainService"
                     interface="com.dwarfeng.fdr.stack.service.RealtimeValueMaintainService"/>
    <dubbo:reference id="triggeredValueMaintainService"
                     interface="com.dwarfeng.fdr.stack.service.TriggeredValueMaintainService"/>
</beans>
